<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="HSLU MOPRO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:padding="5dp"
            android:text="Application-Preferences"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_resume_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="{# onResume() Aufruf}" />

        <TextView
            android:id="@+id/main_preferences_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Wie mag ich meinen Tee" />

        <Button
            android:id="@+id/main_button_open_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tee-Preferences editieren"
            />

        <Button
            android:id="@+id/main_button_set_default_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tee Default-Prefs setzen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_dark_background"
            android:padding="5dp"
            android:text="Dateisystem"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/main_checkbox_external_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Externe Speicher Nutzung" />

        <TextView
            android:id="@+id/main_external_storage_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:text="{ external storage state }" />

        <EditText
            android:id="@+id/main_file_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:lines="5"
            android:text="Text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_button_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="Speichern"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/main_button_load"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="Laden"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_dark_background"
            android:padding="5dp"
            android:text="Content Provider"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/main_button_sms_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS anzeigen" />

    </LinearLayout>

</ScrollView>